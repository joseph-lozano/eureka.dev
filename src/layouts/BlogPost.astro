---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Alert from "../components/Alert.astro";

export interface Props {
	content: {
		title: string;
		description: string;
		pubDate?: string;
		updatedDate?: string;
		heroImage?: string;
		isDraft?: boolean;
	};
}

const {
	content: {
		title,
		description,
		pubDate,
		updatedDate,
		heroImage,
		isDraft = false,
	},
} = Astro.props;
---

<html
	lang="en"
	class="h-screen w-screen bg-base-200"
	style="scrollbar-gutter: stable;"
>
	<head>
		<BaseHead title={title} description={description} image={heroImage} />
	</head>

	<body
		class="px-4 mx-auto items-center text-left text-base-content leading-relaxed max-w-6xl m-auto break-words overflow-wrap flex flex-col h-full"
	>
		<Header />
		<main class="flex flex-col items-center">
			{
				isDraft && (
					<div class="w-full mb-4" transition:name={`draft:${title}`}>
						<Alert
							color="warning"
							title={
								"This post is a draft. It may change significantly before it is published."
							}
						/>
					</div>
				)
			}
			<article class="prose prose-xl">
				{heroImage && <img width={720} height={360} src={heroImage} alt="" />}
				<h1 transition:name={`post:${title}`} class="text-4xl mt-1 mb-0">
					{title}
				</h1>
				{pubDate && <time transition:name={`post:${pubDate}`}>{pubDate}</time>}
				{
					updatedDate && (
						<div>
							Last updated on <time>{updatedDate}</time>
						</div>
					)
				}
				<hr class="border-t border-gray-300 my-4" />

				<slot />
			</article>
		</main>
		<Footer />
	</body>
</html>
