---
import { execSync } from "child_process";
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";

const lastModifiedString = execSync(
	`git log -1 --pretty="format:%cI" src/pages/now.astro`
).toString();
const lastUpdated = new Date(lastModifiedString);
---

<html lang="en" class="h-screen bg-base-200">
	<head>
		<BaseHead title={"Now"} description={"What I'm up to right now"} />
	</head>

	<body
		class="overflow-wrap m-auto mx-auto flex h-full max-w-6xl flex-col items-center break-words px-4 text-left leading-relaxed text-base-content"
		style="scrollbar-gutter: stable;"
	>
		<Header />
		<main class="grow space-y-4">
			<div class="flex items-baseline">
				<h2 class="text-3xl font-bold">Now</h2>
				<span class="ml-1 text-sm text-base-content/80"
					>Updated {lastUpdated.toLocaleDateString()}</span
				>
			</div>

			<article class="prose">
				<p>
					I currently work at <a
						href="https://www.testdouble.com"
						class="link-primary link">Test Double</a
					> as a Senior Softare Consultant.
				</p>
			</article>
		</main>
	</body>
</html>
