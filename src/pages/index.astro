---
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import { SITE_DESCRIPTION, SITE_TITLE } from "../config";
---

<!doctype html>
<html lang="en" class="h-screen bg-base-200">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body
		class="px-4 mx-auto items-center text-left text-base-content leading-relaxed max-w-6xl m-auto break-words overflow-wrap flex flex-col h-full"
		style="scrollbar-gutter: stable;"
	>
		<Header title={SITE_TITLE} />
		<main class="space-y-4 grow">
			<h1 class="text-4xl font-bold">Hello there!</h1>

			<p>
				Welcome to my blog! Not much here at the moment, but check back soon!
				<br />
				 I am a software developer living in New York. I specialize in Elixir,
				TypeScript, and React.
			</p>
		</main>
		<Footer />
	</body>
</html>
